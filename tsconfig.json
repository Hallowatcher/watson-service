    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}